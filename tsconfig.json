{
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.js",
		"./src/**/*.jsx",
		"./*.css"
	],
	"exclude": ["node_modules", "./node_modules/@types/node/**/*.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "WebWorker"],
		"module": "ESNext",
		"types": [],
		"strict": true,
		"jsx": "react",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	}
}
